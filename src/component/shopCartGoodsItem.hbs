<div class="row p-1 border my-3">
    <img class="col-2" src="{{image}}" alt="photos">
    <div class="col-6 d-flex flex-column justify-content-center">
        <p class="h3">{{name}}</p>
        <p>{{description}}</p>
    </div>
    <div class="d-flex flex-column col-1 justify-content-center">
        {{#with price}}
        {{title}}
        <span>{{value}}</span>
        {{/with}}
    </div>
    <div class="col-1">{{mount}}</div>

    <div class="d-flex flex-column col-2 justify-content-evenly">
        {{#each buttons}}
        <button
            class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</button>
        {{/each}}
    </div>
</div>