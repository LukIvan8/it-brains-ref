<main>

    <section class="mb-5">
        {{>breadcrumb}}

        {{#with newsData}}

        <div class="card">

            <img src="{{photo}}" alt="photo">
            <div class="card-body">
                {{#with head}}
                <h2 class="card-title">{{heading}}</h2>
                <p class="card-text">{{description}}</p>
                {{/with}}
            </div>
            <div class="card-body">
                {{#each body}}
                <h3 class="card-title">{{title}}</h3>
                <p class="card-text">{{text}}</p>
                {{/each}}
            </div>
        </div>

        {{/with}}

    </section>

    <hr class="my-5">

    <section>
        {{#with newsOtherBlock}}
        <h2 class="text-center mb-3">{{title}}</h2>
        {{>shoppost}}
        {{/with}}
    </section>


    <section>
        {{#with goodsOtherBlock}}
        <h2 class="h2 text-center mb-3">{{title}}</h2>
        {{>shopcard}}
        {{/with}}
    </section>

    {{>shopaction}}

</main>