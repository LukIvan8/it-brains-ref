<main>
    <h1>Languages</h1>
    {{#each web.languages}}
    <section>
        <h2>
            <dt><strong>{{name}}</strong></dt> <small>version:</small> <i>{{version}}</i>
        </h2>
        <hr>
        <dd>{{description}}</dd>
        {{#if elements}}<h3>Elements:</h3>{{/if}}
        {{#each elements}}
        <b>
            <u>
                <dt>{{name}}</dt>
            </u>
        </b>
        <dd>{{description}}</dd>
        <p>Attributes:</p>
        {{#each attributes}}
        <ul>
            <li>
                <dt><i>{{name}}</i></dt>
                <dd>{{description}}</dd>
            </li>
        </ul>
        {{/each}}
        {{/each}}
        {{#if properties}} <h3>Properties:</h3> {{/if}}
        {{#each properties}}
        <b><u>
                <dt>{{name}}</dt>
            </u></b>
        <dd>{{description}}</dd>
        <p>Values:</p>
        {{#each values}}
        <ul>
            <li>
                <dt><i>{{value}}</i></dt>
                <dd>{{description}}</dd>
            </li>
        </ul>
        {{/each}}
        {{/each}}
        {{#if functions}} <h3>Functions:</h3> {{/if}}
        {{#each functions}}
        <b><u>
                <dt>{{name}}</dt>
            </u></b>
        <dd>{{description}}</dd>
        <p>Parameters:</p>
        {{#each parameters}}
        <ul>
            <li>
                <dt><i>{{name}} (type - {{type}})</i></dt>
                <dd>{{description}}</dd>
            </li>
        </ul>
        {{/each}}
        {{/each}}

    </section>
    {{/each}}
</main>